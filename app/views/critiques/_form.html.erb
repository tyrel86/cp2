<% content_id = critique.id %>
<% content_id ||= "create" %>

<%= simple_form_for critique, :html => { :multipart => true } do |f| %>
    <%= f.input :title, :label => 'Title' %>
    <%= f.input :content, :label => 'Content', input_html: {id: content_id, class: "tinymce" } %>
    <%= f.input :critique_type, :collection => ["dispensary", "strain"] %>
		<%= f.file_field :photo %>
		<% if dispensary %>
			<% dIdVal = dispensary.id %>
		<% else %>
			<% dIdVal = nil %>
		<% end %>
    	<%= f.input :dispensary_id, :label => 'Dispensary ID', :input_html => { :value => dIdVal } %>
    <%= f.button :submit, class: "btn-success" %>
<% end %>
